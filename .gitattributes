# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.mdc text diff=markdown

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files (should not be tracked)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

# Large files (should not be tracked)
*.csv binary
*.xlsx binary
*.xls binary
*.parquet binary
*.h5 binary
*.hdf5 binary
*.pkl binary
*.pickle binary
*.db binary
*.sqlite binary
*.sqlite3 binary
